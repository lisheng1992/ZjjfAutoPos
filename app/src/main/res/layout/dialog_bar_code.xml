<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="600dp"
    android:background="@drawable/white_radius">

    <ImageView
        android:id="@+id/iv_bar_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bar_code_hint"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="36dp"/>

    <ImageView
        android:id="@+id/iv_cancel_barcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/dialog_cancle_selector"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"/>


    <EditText
        android:id="@+id/et_bar_code"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/bar_code_sp"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:gravity="center_vertical"
        android:paddingLeft="18dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:clickable="false"
        android:maxLength="15"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textColorHint="@color/color_cccccc"
        android:hint="请输入商品包装上的条形码"
        android:layout_below="@+id/iv_bar_code"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/et_bar_code">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_num_one"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="57dp"
                android:background="@drawable/number_selector"
                android:layout_marginRight="15dp"
                android:textColor="@color/grey_666666"
                android:gravity="center"
                android:textSize="20sp"
                android:text="1"/>
            <TextView
                android:id="@+id/tv_num_two"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="57dp"
                android:background="@drawable/number_selector"
                android:layout_marginRight="15dp"
                android:textColor="@color/grey_666666"
                android:gravity="center"
                android:textSize="20sp"
                android:text="2"/>
            <TextView
                android:id="@+id/tv_num_three"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="57dp"
                android:background="@drawable/number_selector"
                android:textColor="@color/grey_666666"
                android:gravity="center"
                android:textSize="20sp"
                android:text="3"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_num_four"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="57dp"
                android:background="@drawable/number_selector"
                android:layout_marginRight="15dp"
                android:textColor="@color/grey_666666"
                android:gravity="center"
                android:textSize="20sp"
                android:text="4"/>
            <TextView
                android:id="@+id/tv_num_five"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="57dp"
                android:background="@drawable/number_selector"
                android:layout_marginRight="15dp"
                android:textColor="@color/grey_666666"
                android:gravity="center"
                android:textSize="20sp"
                android:text="5"/>
            <TextView
                android:id="@+id/tv_num_six"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="57dp"
                android:background="@drawable/number_selector"
                android:textColor="@color/grey_666666"
                android:gravity="center"
                android:textSize="20sp"
                android:text="6"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_num_seven"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="57dp"
                android:background="@drawable/number_selector"
                android:layout_marginRight="15dp"
                android:textColor="@color/grey_666666"
                android:gravity="center"
                android:textSize="20sp"
                android:text="7"/>
            <TextView
                android:id="@+id/tv_num_eigth"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="57dp"
                android:background="@drawable/number_selector"
                android:layout_marginRight="15dp"
                android:textColor="@color/grey_666666"
                android:gravity="center"
                android:textSize="20sp"
                android:text="8"/>
            <TextView
                android:id="@+id/tv_num_nine"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="57dp"
                android:background="@drawable/number_selector"
                android:textColor="@color/grey_666666"
                android:gravity="center"
                android:textSize="20sp"
                android:text="9"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_num_clear"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="57dp"
                android:background="@drawable/number_selector"
                android:layout_marginRight="15dp"
                android:textColor="@color/grey_666666"
                android:gravity="center"
                android:textSize="20sp"
                android:text="清空"/>
            <TextView
                android:id="@+id/tv_num_zero"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="57dp"
                android:background="@drawable/number_selector"
                android:layout_marginRight="15dp"
                android:textColor="@color/grey_666666"
                android:gravity="center"
                android:textSize="20sp"
                android:text="0"/>
            <FrameLayout
                android:id="@+id/fl_back"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="57dp"
                android:background="@drawable/number_selector" >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/rollback"
                    android:layout_gravity="center"/>
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
    
    <Button
        android:id="@+id/bt_sure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:background="@drawable/bar_code_selector"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:text="确定"/>
    
</RelativeLayout>
